{{#if showSuccess}}
<div class="alert-info">
    <p class="lead text-center">Your Message Sent Successfully</p>
</div>
{{/if}}

<p class="lead">New Email</p>

<form>
    <div class="form-group">
        <label for="sendor">From:</label>
        {{input class='form-control' value=sender}}
    </div>
    <div class="form-group">
        <label for="sendor">To:</label>
      {{input class='form-control' value=receiver}}
    </div>
    <div class="form-group">
        <label for="sendor">Subject:</label>
      {{input class='form-control' value=subject}}
    </div>
    <div class='form-group'>
        <label for="message">Message:</label>
        {{textarea cols='50' rows='10' id="body" class="form-control" value=body}}
    </div>

    <button class='btn btn-default' {{action 'sendEmail'}}>Send</button>
</form>